%h2 Update team grade

%form
    = form_for :team_grade, url: team_grade_admin_teams_path do |f|
        = f.hidden_field :assignment_id, value: assignment_id
        = f.hidden_field :team_id, value: team.id
        .form-group
            = f.label "Team grade"
            = f.text_field :grade, class: 'form-control'
        = submit_tag 'Submit', class: 'btn btn-primary'